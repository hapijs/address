{
    "compilerOptions": {
        "target": "es2020",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "rootDir": "src",
        "outDir": "esm",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true
    },
    "include": [
        "*.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "esm",
        "test/*"
    ]
}
